<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuimageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/baseline_mail_24" />

        <TextView
            android:id="@+id/menutextView1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="5dp"
            android:text="Inbox"
            android:textStyle="bold"
            android:gravity=""
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuimageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/menutextView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:gravity=""
            android:textSize="25sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuimageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/baseline_post_add_24" />

        <TextView
            android:id="@+id/menutextView4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Write Post"
            android:textStyle="bold"
            android:gravity=""
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuimageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/baseline_settings_24" />

        <TextView
            android:id="@+id/menutextView5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Preferences"
            android:textStyle="bold"
            android:gravity=""
            android:textSize="25sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/menubutton1"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="80dp"
        android:text="Log Out"
        android:backgroundTint="@color/clr1"
        android:textSize="25sp"/>


</LinearLayout>
